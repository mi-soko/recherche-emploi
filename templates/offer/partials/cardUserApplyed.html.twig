<div class="card shadow bg-white" >
    <div class="card-body p-5">
        <h1 class="competence-title pb-3">Liste des participants ({{ offer.jobSeekers.count }})</h1>
        <div class="row row-cols-md-2" >
            {% for jobseeker in offer.jobSeekers  %}
                <div class="card-body">
                    <a href="{{ path('app_show_cv',{id: jobseeker.id}) }}" class="detail-profil-card-link" >
                        {{ jobseeker.fullName }} - {{ jobseeker.profileTitle }}</a>
                    <div class="dropdown-divider" ></div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
