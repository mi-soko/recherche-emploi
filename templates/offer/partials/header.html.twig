
<header class="container-detail-profile shadow overflow-hidden p-5" >
    <div class="row">
        <div class="col-md-3">
            <div class="detail-profil-image" >
                <img src="{{ offer.picture }}" class="img-fluid shadow" alt="">
            </div>
        </div>
        <div class="col-md-6">
            <h1 class="detail-profil-title"><i class="fas fa-building"></i> {{ offer.compagnie.compagnieName | capitalize }}</h1>
            <h4 class="detail-profil-sub-title"><i class="fas fa-briefcase"></i> {{ offer.title | capitalize }}</h4>
            <h6 class="title"><i class="fas fa-chart-pie"></i>  Catégorie <span class="fw-bold" >{{ offer.categories.name | capitalize }}</span></h6>
            <h6 class="title"><i class="fas fa-calendar-alt"></i>  Date de création <span class="fw-bold" > {{ offer.createdAt | date() }}</span></h6>
            <div class="card-group" >
                <div class="card" >
                    <div class="card-body p-0 bg-blue-dark" >
                        <p class="m-2 detail-profil-card-text text-white" >Expérience</p>
                        <p class="m-2 detail-profil-card-text fw-bold text-white " >
                            {% if offer.experienceLevels == 1 %}
                                0-2 ans
                            {% elseif  offer.experienceLevels == 2 %}
                                2-7 ans
                            {% elseif  offer.experienceLevels == 3 %}
                                7ans et +
                            {% endif %}

                        </p>
                    </div>
                </div>
                <div class="card" >
                    <div class="card-body p-0  " >
                        <p class="m-2 detail-profil-card-text fw-bold " >Nombre de competence</p>
                        <p class="m-2 detail-profil-card-text fw-bold " >{{ offer.skills.count }}</p>
                    </div>
                </div>
                <div class="card" >
                    <div class="card-body p-0 " >
                        <p class="m-2 detail-profil-card-text fw-bold" >Niveau d'etude</p>
                        <p class="m-2 detail-profil-card-text fw-bold" >Bac +5</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="container" >

                {% if app.user.role == "ROLE_JOB_SEEKER" %}
                    <a data-turbolinks="false"  href="{{ path('app_offer_subscribe',{id: offer.id}) }}" class="btn detail-profil-btn col-12 text-white bg-rose-dark" >
                        {% if app.user.offer.contains(offer) %} Annuler {% else %}  Postuler {% endif %}
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</header>
